<%= form_for(@designer_registration) do |f| %>
  <% if @designer_registration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@designer_registration.errors.count, "error") %> prohibited this registration from being saved:</h2>

      <ul>
      <% @designer_registration.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
<% if false %>
	<div class="row">
		<div class="col-lg-6">
			<%= f.label :first_name, Spree.t(:first_name) %>
			<%= f.text_field :first_name, :class => 'form-control' %>
		</div>
		<div class="col-lg-6">
			<%= f.label :last_name, Spree.t(:last_name) %>
			<%= f.text_field :last_name, :class => 'form-control' %>
		</div>
	</div>
</div>
<% end %>
<div class="form-group">
	<div class="row">
		<div class="col-lg-12">
			<%= f.label :company_name, "Company Name" %>
			<%= f.text_field :company_name, :class => 'form-control' %>
			<%= f.error_message_on :company_name %>
		</div>
	</div>
</div>
<div class="form-group">
	<div class="row">
		<div class="col-lg-6">
			<%= f.label :address1, "Street Address" %>
			<%= f.text_field :address1, :class => 'form-control' %>
			<%= f.error_message_on :address1 %>
		</div>
		<div class="col-lg-6">
			<%= f.label :address2, "Street Address 2" %>
			<%= f.text_field :address2, :class => 'form-control' %>
			<%= f.error_message_on :address2 %>
		</div>
	</div>
</div>
<div class="form-group">
	<div class="row">
		<div class="col-lg-5">
			<%= f.label :city, "City" %>
			<%= f.text_field :city, :class => 'form-control' %>
			<%= f.error_message_on :city %>
		</div>
		<div class="col-lg-2">
			<%= f.label :state, "State" %>
			<%= f.text_field :state, :class => 'form-control' %>
			<%= f.error_message_on :state %>
		</div>
		<div class="col-lg-5">
			<%= f.label :postal_code, "Postal Code" %>
			<%= f.text_field :postal_code, :class => 'form-control' %>
			<%= f.error_message_on :postal_code %>
		</div>
	</div>
</div>
<div class="form-group">
	<div class="row">
		<div class="col-lg-6">
			<%= f.label :phone, "Phone Number" %>
			<%= f.text_field :phone, :class => 'form-control' %>
			<%= f.error_message_on :phone %>
		</div>
		<div class="col-lg-6">
			<%= f.label :website, "Website" %>
			<%= f.text_field :website, :class => 'form-control' %>
			<%= f.error_message_on :website %>
		</div>
	</div>
</div>
<div class="form-group">
	<div class="row">
		<div class="col-lg-12">
			<%= f.label :resale_certificate_number, "Resale Certificate Number (if applicable)" %>
			<%= f.text_field :resale_certificate_number, :class => 'form-control' %>
			<%= f.error_message_on :resale_certificate_number %>
		</div>
	</div>
</div>
<div class="form-group">
	<div class="row">
		<div class="col-lg-12">
			<%= f.label :tin, "TIN/SSN" %>
			<%= f.text_field :tin, :class => 'form-control' %>
			<%= f.error_message_on :tin %>
		</div>
	</div>
</div>


<p>By submitting this form you are agreeing to the Scout & Nimble <%= link_to "Designer Terms of Service", "/designer-terms", :target => "_new" %>.</p>		
	

  <div class="actions">
    <%= f.submit "Submit Registration", :class => "btn btn-primary" %>
  </div>
<% end %>
