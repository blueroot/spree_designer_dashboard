				<%= image_tag("/assets/store/profile_default_primary.jpg", :style=>"border-radius:250px;") %>
			<% end %>
		<%end%>	
			<div class=center>
			    <a href=# id=prev>&lt;&lt; Prev </a>
			    <a href=# id=next> Next &gt;&gt; </a>
			</div>
			
		</div>
	</div>
</div>
		
