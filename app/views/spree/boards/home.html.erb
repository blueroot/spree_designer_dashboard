
<div class="container">					
	<div class="prime">
		<div class="tagline">
			<h1 class="home-header">Removing the guesswork from home design.</h1>
			<p class="home-subheader">Browse room designs from the industry's top designers for a room you'll love.</p>
		</div>	
		<div class="room-highlights">
			<div class="row">
				<div class="col-md-4">
					<div class="home-product">
						<div>
						<% unless @designer.user_images.blank? %>
							<%= link_to image_tag(@designer.user_images.first.attachment(:primary), :style => "width:100%;height:200px;"), "/#{@designer.username}" %>
						<% else %>
						<%= image_tag('store/home/designer.png')%>
						<%end%>
						</div>
						<h4>Exceptional Designers</h4>
						<p></p>
					</div>
				</div>
				<div class="col-md-4">
					<div class="home-product">
					<div>
					<% unless @product.blank? %>
					 <a href="javascript:void(0);" class="add-to-board-link" data-product-id="<%=@product.permalink %>">
					   <%= large_image(@product, :itemprop => 'image', :style => "width:100%;height:200px;") %>
					 </a>  
					<%else%>
					<%= image_tag('store/home/product.png')%>
					<%end%>
					</div>
					<h4>Unique Products</h4>
					<p></p>
					</div>
				</div>
				<div class="col-md-4">
					<div class="home-product" >
					<div style="width:100%;height:200px;">
					
					<% unless board_image(@board, :large).blank? %>
						<%= link_to board_image(@board, :large), room_path(@board)%>
					<% else %>
					  <%= image_tag('store/home/board.png')%>
					<%end%>
					
					</div>
					<h4>Beautiful Rooms</h4>
					<p></p>
					</div>
				</div>
			</div>
		</div>
	</div>	
</div>
<div class="container">
	<h2>Featured Living Rooms</h2>
	<div class="boards-list-main">
		<% unless @living_room_boards.blank? %>
			<%= render :partial => "home_boards_list", :locals => {:boards => @living_room_boards}%>
		<% else %>
			<div class="empty-state">There aren't any featured living rooms at this time.</div>
		<% end %>
	</div>
</div>
