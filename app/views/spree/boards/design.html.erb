<div class="row">
	<div class="col-md-12">
		<div class="page-header clearfix">
			<ol class="breadcrumb">
			  <li><%= link_to "Dashboard", designer_dashboard_path%></li>
			  <li><%= link_to "My Boards", my_boards_path%></li>
			  <li class="active"><%= @board.name %></li>
			</ol>
			<h1><%= @board.name %></h1>
			
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<a href="javascript:void(0);" id="add-products-button" class="btn btn-default">Add Products</a>
		<% if false %><li><a href="javascript:void(0);" id="add-colors-button">Add Color Swatches</a></li><% end %>
		<a href="javascript:void(0);" id="edit-board-button" class="btn btn-default">Edit Details</a>
	</div>
</div>
<div class="row">
	<div class="col-md-9">
		
		<div class="board-content-body">
			<div id="board-container">
			
	
			<div id="board-canvas" data-board-id="<%= @board.id %>" style="height: 450px; width: 800px; background-color: #fff; border: 1px dashed #bdc3c7; position: relative; z-index: 1; "></div>
			
			
			
			</div>
			<div class="board-colors-container">
				
				<h4>Choose Sherwin Williams paint swatches for your board</h4>
				
				
				<div class="board-swatch color-match-link board-swatch-default" id="add-colors-link-1" data-match-id="1">
					<div class="board-swatch-color" id="board-swatch-color-1"></div>
					<div class="board-swatch-content" id="board-swatch-content-1"></div>
				</div>
				
				<div class="board-swatch color-match-link board-swatch-default" id="add-colors-link-2" data-match-id="2">
					<div class="board-swatch-color" id="board-swatch-color-2"></div>
					<div class="board-swatch-content" id="board-swatch-content-2"></div>
				</div>
				
				<div class="board-swatch color-match-link board-swatch-default" id="add-colors-link-3" data-match-id="3">
					<div class="board-swatch-color" id="board-swatch-color-3"></div>
					<div class="board-swatch-content" id="board-swatch-content-3"></div>
				</div>
				
				<div class="board-swatch color-match-link board-swatch-default" id="add-colors-link-4" data-match-id="4">
					<div class="board-swatch-color" id="board-swatch-color-4"></div>
					<div class="board-swatch-content" id="board-swatch-content-4"></div>
				</div>
				
				<div class="board-swatch color-match-link board-swatch-default" id="add-colors-link-5" data-match-id="5">
					<div class="board-swatch-color" id="board-swatch-color-5"></div>
					<div class="board-swatch-content" id="board-swatch-content-5"></div>
				</div>
					
					
				
				
			</div>
		</div>
		
	</div>
	<div class="col-md-3">
		
		
		<div class="panel panel-info">
		  <div class="panel-heading">
		    <h3 class="panel-title">Status</h3>
		  </div>
		  <div class="panel-body">
		    <p><label>Status:</label> <%= @board.display_status%></p>
		
			<% if @board.status == "new" %>
				<a href="javascript:void(0);" id="publish-board-button" class="btn btn-primary btn-sm">Publish Board</a>
			<% elsif @board.status == "published" %>
				<a href="javascript:void(0);" id="unpublish-board-button" class="btn btn-primary btn-sm">Publish Board</a>
			<% elsif @board.status == "needs_revision" %>
				<a href="javascript:void(0);" id="unpublish-board-button" class="btn btn-primary btn-sm">Publish Board</a>
			
			<% elsif @board.status == "suspended" %>
			
			<% end %>
			
			
			
		  </div>
		</div>
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">History & Notes</h3>
		  </div>
		  <div class="panel-body">
		    <ul class="unstyled board-history">
			<% unless @board.messages.blank? %>
				<% @board.messages.each do |message| %>
					<%unless message.new_record?%>
					<li><strong><%= message.subject %></strong>
					<p><%= message.body %></p></li>
					<% end %>
					
				<% end %>
			<% end %>
				<li>Created on <%= @board.created_at.strftime("%B %e, %Y at %l:%M %P")%></li>
			</ul>
			
			
		  </div>
		</div>
		
		<%#= link_to "Save Changes", edit_board_path(@board), :class=> "button"%>
	</div>
</div>

<%= render :partial => "edit_board_colors_modal"%>
<%= render :partial => "edit_board_modal"%>	
<%= render :partial => "submit_for_publication_modal"%>	
<%= render :partial => "add_products_modal"%>	

<style>
	.board-product-selected{
		border: 2px solid #aaa;
		margin: -2px 0 0 -2px;
	}
	.light-box-product-unavailable{
		border: 1px solid red;
	}
</style>

<script>


$('.swatch').popover({ 
    html : true,
    content: function() {
		//$('.button-product-info').popover('hide');
      return $('#'+$(this).data('colorPopoverContainer')).html();
    }
  });

$( "#add-products-button" ).click(function() {
  $('#product-modal').modal()
});

$( ".color-match-link" ).click(function() {
  	$( ".color-match-link" ).removeClass('active')
	$(this).addClass('active')
	$('#colors-modal').modal()
});

$( ".swatch" ).click(function() {
  	$( "div.board-colors-container > .active > .board-swatch-color" ).css("background-color", '#'+$(this).data('color'))
	$( "div.board-colors-container > .active" ).removeClass('board-swatch-default')
	
	swatch_table = '<table class="table table-condensed swatch-table"><tr><td><strong>Swatch #</strong></td><td>'+$(this).data('colorSwatchVal')+'</td></tr><tr><td><strong>Hex</strong></td><td>#'+$(this).data('color')+'</td></tr><tr><td><strong>HSV</strong></td><td>H: '+$(this).data('colorHsvH')+'<br />S: '+$(this).data('colorHsvS')+'<br />V: '+$(this).data('colorHsvV')+'</td></tr></table>'
	
	$( "div.board-colors-container > .active > .board-swatch-content" ).html('<h4>'+$(this).data('colorName')+'</h4>'+$(this).data('colorSwatchVal'))
	
	
	
	$('#colors-modal').modal('hide')
});

$( "#edit-board-button" ).click(function() {
  $('#board-modal').modal()
});

$( "#publish-board-button" ).click(function() {
  $('#publish-board-modal').modal()
});

$(function () {
    var element;
    
    $('#board-canvas').droppable({
        accept: function(element) {
		  var cn = element.className;
		  return cn == 'board-lightbox-product' || 'board-lightbox-product-cloned'
		},
        drop: handleDropEvent
    });
	getSavedProducts($('#board-canvas').data('boardId'));
	
	
	/* attach a submit handler to the form */
	$("#product_search_form").submit(function(event) {

		/* stop form from submitting normally */
		event.preventDefault();

		/* get some values from elements on the page: */
		var $form = $( this ),
		term = $form.find( 'input[name="product_keywords"]' ).val(),
		wholesaler_taxon = $form.find( 'select[name="wholesaler_taxon"]' ).val(),
		department_taxon = $form.find( 'select[name="department_taxon"]' ).val(),
		url = $form.attr( 'action' );
		
		//alert(taxon);
		/* Send the data using post */
		var posting = $.post( url, { keywords: term, department_taxon_id: department_taxon, wholesaler_taxon_id: wholesaler_taxon, per_page: 100 } );

		/* Put the results in a div */
		posting.done(function( data ) {
			//var content = $( data ).find( '#content' );
			//$( "#result" ).empty().append( content );
		});
	});
	
});
</script>
