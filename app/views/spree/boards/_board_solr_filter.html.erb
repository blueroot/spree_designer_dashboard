<div class="row">
  <div class="js-filter-search">
    <% if taxon_filters.present? %>
        <% params[:board_id] = board.id %>
        <% taxon_filters.each do |key, value| %>

            <div class="filter-option-box col-md-3">
              <%= select_tag key.to_sym, options_for_select(generate_filter_select(value, params, key)),  prompt: key.to_s.capitalize , class: 'form-control js-select-filter-value' %>
            </div>
        <% end %>
        <div class="js-filter-selected col-md-12">
        <% if params[:s].present? %>
            <% params[:s].each do |set| %>
            <%= link_to product_result_rooms_path(define_params_filter(params, set[0], set_filter_value(set[1]), :s, true)), class: 'js-remove-filter-rooms my-btn-primary' do %>

                      <%=get_filter_value(set[1], params[:room_id])%>
                      <i class="fa fa-close"></i>
                  <% end %>
            <% end %>
        <% end %>
        </div>
    <% end %>

  </div>
</div>