<div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
	<%= f.error_message_on :name %>
</div>
<div class="form-group">
	<%= f.label :description %>
	<%= f.text_area :description, {:class => 'form-control', :rows => 5} %>
	<%= f.error_message_on :description %>
</div>
<div class="row">
	<div class="col-lg-6">
		<%= f.label :room_id, "Room" %>
		<%= f.collection_select :room_id, @room_taxons, :id, :name, {:include_blank => true}, {:class => 'form-control', :style => ""} %>	</div>
	<div class="col-lg-6">
		<%= f.label :style_id, "Style" %>
		<%= f.collection_select :style_id, @style_taxons, :id, :name, {:include_blank => true}, {:class => 'form-control', :style => ""} %>
	</div>
</div>
