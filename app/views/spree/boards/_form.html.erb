<fieldset class="form-horizontal">
	<div class="form-group">
	    <%= f.label :name, :class => "col-sm-2 control-label" %>
	    <div class="col-sm-10">
			<%= f.text_field :name, :class => 'form-control', :"required" => "" %>
			<%= f.error_message_on :name %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :description, :class => "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.text_area :description, {:class => 'form-control', :rows => 5, :"required" => ""} %>
			<%= f.error_message_on :description %>
		</div>
	</div>
	<div class="form-group">	
		<%= f.label :room_id, "Room Type", :class => "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= f.collection_select :room_id, @room_taxons, :id, :name, {:include_blank => true}, {:class => 'form-control', :style => "", :"required" => ""} %>
		</div>	
	</div>
	<div class="form-group">
		<%= f.label :style_id, "Style", :class => "col-sm-2 control-label" %>
		<div class="col-sm-10">
		<%= f.collection_select :style_id, @style_taxons, :id, :name, {:include_blank => true}, {:class => 'form-control', :style => "", :"required" => ""} %>
		</div>
	</div>
</fieldset>