<div class="container">
	<div class="page-header clearfix">
		<h1>Add a New Board</h1>
	</div>
	
	<%= form_for [@board] do |f| %>
	<%= f.field_container :name do %>
      <%= f.label :name, "What would you like to name your board?" %>
      <%= f.text_field :name, :class => 'title input-xxlarge' %>
      <%= f.error_message_on :name %>
    <% end %>
		<%#= render :partial => 'form', :locals => { :f => f } %>
		<p><%= submit_tag("Create Board")%></p>
	<% end %>
</div>