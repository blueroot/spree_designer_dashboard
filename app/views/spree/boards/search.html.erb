<% if false %>
<div class="columns sixteen alpha">
	<div class="page-header clearfix">
		<h1>Boards</h1>
		
	</div>
</div>
<% end %>

<div class="columns four alpha">
	<%= render :partial => "search_form"%>
</div>

<div class="columns twelve omega">
	
	<% unless @boards.blank? %>
		<div class="search-summary">
			We found <%= pluralize(@boards.size, "board") %> that matched your search.  
		</div>
	<% else %>
		<div class="empty-results">
			We're sorry, we couldn't find any boards for that search.
		</div>
	<% end %>
	
	<div class="boards-list-main">
		
		
		
		
		<% unless @boards.blank? %>
			<% @boards.each do |board| %>
				<div class="board">
					<h3><%= link_to board.name, board %></h3>
					<div class="board-byline">by <%= board.designer.full_name%></div>
					<p><%= link_to image_tag(board.board_image.attachment("primary")), board%></p>
				</div>
			<% end %>
		
		
			
		<% end%>
		
		
		
	</div>
</div>
