<% unless designer.user_images.blank? %>
	<%= link_to image_tag(designer.user_images.first.attachment(:large), :style => "width: 100%;"), "/#{designer.username}" %>
<% else %>
	<%= link_to image_tag("/assets/store/profile_default_primary.jpg", :style => "width: 100%;"), "/#{designer.username}" %>
<% end %>