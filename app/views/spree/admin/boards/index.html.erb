
<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

<%= javascript_include_tag 'admin/board_products.js' %>

<%= render :partial => 'spree/admin/shared/boards_sub_menu' %>

<div class = 'row'>
  <div class = "form-group col-md-4 left" id = "product-search">
    <b><%= label_tag "Show only products for supplier:" %></b>
    <%= select_tag :suppliers, options_for_select(@supplier_names, @supplier_names.first), class: "form-control" %>
  </div>

  <div class = "form-group col-md-4 col-md-offset-4 right" id = "product-search">
    <b><%= label_tag "Show products that are :" %></b>
    <%= select_tag :status, options_for_select(["All products","Pending", "Approved", "Rejected"], "All Products"), class: "form-control" %>
  </div>
</div>

<div class = "row">
  <% @boards.each do |board| %>
    <div class = "row search-result col-md-12">

    <div class = "row">
      <div class = "col-md-4">
        <%= link_to "Expand/Collapse", "", class: "#{board.id} btn btn-warning collapse-button", style: "color: white;" %>
      </div>
      <div class = "col-md-4">
        <h3><%= board.name %></h3>
      </div>

      <div class = "col-md-2 col-md-offset-2">

        <a data-toggle ="tooltip" data-placement = "right" title = "Approve Board">
          <span class="glyphicon glyphicon-ok <%= board.id %>"></span>
        </a>

        <a data-toggle ="tooltip" data-placement = "right" title = "Reject Board">
          <span class="glyphicon glyphicon-ban-circle <%= board.id %>"></span>
        </a>

        <a data-toggle ="tooltip" data-placement = "right" title = "Delete Board">
          <span class="glyphicon glyphicon-remove <%= board.id %>"></span>
        </a>
        
      </div>

    </div>

    <div class = "row collapsable <%= board.id %> hidden">
      <%= render "board_product_list", board: board %>
    </div>

  </div>
<% end %>
</div>

<script>
$(".collapse-button").click(function(e){
    e.preventDefault();
    board_id = $(this).attr("class").split(" ")[0];

    $board_products_row = $(".collapsable." + board_id);

    if($board_products_row.hasClass("hidden")){
      $board_products_row.removeClass("hidden");
    }
    else{
      $board_products_row.addClass("hidden");
    }

});

</script>
