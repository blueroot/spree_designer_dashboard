<% content_for :board_actions do %>  
  <li><%= button_link_to Spree.t("designer_board.new_board"), new_object_url, :icon => 'icon-plus' %></li>
<% end %>

<% content_for :board_title do %>
	<%= Spree.t("designer_board.boards_title") %>
<% end %>

<table class="index">
  <colgroup>
    <col style="width: 40%" />
    <col style="width: 40%" />
    <col style="width: 10%" />
    <col style="width: 10%" />
  </colgroup>
  <thead>
    <tr>
      <th><%= Spree::Board.human_attribute_name(:name) %></th>
      <th>status</th>
	<th class="actions"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @boards.each do |board| %>
      <tr class="<%= cycle('odd', 'even') %>" id="<%= dom_id board %>">
        <td>
          <%= board.name %>
        </td>
        <td>
          <%= board.status %>
        </td>
        <td  class="actions">
          <%= link_to_edit board, :no_text => true %>
          <%= link_to_delete board, :no_text => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>