

<div class="row">
  <div class="alpha ten columns">
	<%= board_image(@board,"primary")%>

    <%= f.field_container :name do %>
      <%= f.label :name %> <span class="required">*</span><br />
      <%= f.text_field :name, :class => 'fullwidth title' %>
      <%= f.error_message_on :name %>
    <% end %>

    <%= f.field_container :body do %>
      <%= f.label :description %><span class="required">*</span><br />
      <%= f.text_area :description, {:class => 'fullwidth'} %>
      <%= f.error_message_on :description %>
    <% end %>
	<%= f.field_container :status do %>
	<%= f.label :status, "Status" %>
	<%= f.select :status, ["Submitted for Publication", "Published", "Needs Revisions", "Retired"], :class => 'field' %>
	<% end %>
  

	<h4>Products on This Board</h4>
	<% if @board.board_products.any? %>
		<% @board.products.in_groups_of(4, false) do |row_products| %>
		<div id="products" class="row">
			<% for product in row_products %>
			<div class="col-md-3">
				<div class="product-listing">
					<div class="product-image" style="min-height">
			        	<%= link_to raw("<span class=\"helper\"></span>#{small_image(product, :itemprop => 'image')}"), product, :itemprop => 'url' %>
			      	</div>
			      	<%= link_to truncate(product.name, :length => 50), product, :class => 'info', :itemprop => "name", :title => product.name %>
			      	
				</div>
			</div>
			<% end %>
		</div>
		<% end %>
	<% end %>

	</div>
  
	
</div>
