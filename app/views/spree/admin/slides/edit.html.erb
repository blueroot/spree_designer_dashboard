<% content_for :page_title do %>
   Slides <i class="icon-arrow-right"></i> <%= Spree.t("editing slide") %> "<%= @slide.name%>"
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back_to_slides), spree.admin_slides_url, :icon => 'icon-arrow-left' %></li>
<% end %>

<%= render "spree/shared/error_messages", :target => @slide %>

<%= form_for [:admin, @slide], :html => {:multipart => true} do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>