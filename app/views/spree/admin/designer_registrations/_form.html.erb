
<% if false %>
<div class="row">
	
  <div class="alpha ten columns">
    <%= f.field_container :name do %>
      <%= f.label :name %> <span class="required">*</span><br />
      <%= f.text_field :name, :class => 'fullwidth title' %>
      <%= f.error_message_on :name %>
    <% end %>

    <%= f.field_container :body do %>
      <%= f.label :description %><span class="required">*</span><br />
      <%= f.text_area :description, {:class => 'fullwidth'} %>
      <%= f.error_message_on :description %>
    <% end %>
  </div>
  
  
</div>

<% end %>

<div class="row">
	<div class="alpha ten columns">
		<%= f.field_container :company_name do %>
		<%= f.label :company_name, "Company Name" %>
		<%= f.text_field :company_name, :class => 'field' %>
		<%= f.error_message_on :company_name %>
		<% end %>
	</div>
</div>


<div class="row">
	<div class="col-lg-6">
		<%= f.label :address1, "Street Address" %>
