<% content_for :page_title do %>
   Designer Registration <i class="icon-arrow-right"></i> <%= Spree.t("designer_board.editing_board") %> "<%= @designer_registration.company_name%>"
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back_to_registrations_list), spree.admin_designer_registrations_url, :icon => 'icon-arrow-left' %></li>
<% end %>

<%= render "spree/shared/error_messages", :target => @board %>

<%= form_for [:admin, @designer_registration] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>