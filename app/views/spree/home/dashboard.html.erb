
<div class="row">
	<div class="col-md-3">
		<h4>Designer Dashboard</h4>
		<ul class="nav nav-stacked">
			<li class="active"><a href="/dashboard">Dashboard Home</a></li>
			<li><a href="/my_rooms">My Rooms</a></li>
			<li><a href="/my_profile">My Profile</a></li>
		</ul>

	</div>

	<div class="col-md-9">
		<div class="page-header clearfix">
			<div class="row">
				<div class="col-md-9">
					<h1>Your Rooms</h1>
				</div>
				<div class="col-md-3 header-actions">
					<%= link_to "Add a Room", new_room_path, :class => "btn btn-primary" %>
				</div>
			</div>
		</div>


  		<% unless @boards.blank? %>
		<table class="table table-board-listing">
			<thead>
				<tr>
					<th>Preview</th>
					<th>Room Name</th>
					<th class="align-center"># Products</th>
					<th class="align-center"># Views</th>
					<th class="status">Status</th>
					
				</tr>
			</thead>
			<tbody>
			<% @boards.each do |board|%>
				
				<tr>
					<td class="board-thumb">
						<%= link_to board_image(board,:mini), design_board_path(board)%>
					</td>
					<td><%= link_to board.name, design_board_path(board) %></td>
					<td class="align-center"><%= board.board_products.size %></td>
					<td class="align-center"><%= board.impressionist_count %></td>
					<td class="status"><%= board.display_status %></td>
					
				</tr>
			<% end%>
			</tbody>
			</table>
		<% else %>
		<div class="empty-state">You have not created any rooms yet.</div>
		<% end %>
	</div>
</div>
